<body>
<div class="container" id="app">
    <h1>WebChat -- Version <%= version %></h1><br><br>
    <div class="messages" id="2">
        <div class="row">
            <div class="col-sm-8">
                <message v-for="message in messages" :from="message.from"> {{ message.text }}</message>
            </div>
            <div class="col-sm-4">
                <div class="row">
                    <h3>Connected users :</h3>
                    <ul>
                        <li v-for="user in users"><a @click.prevent="changeTo" :to="user.id">{{ user.name }}</a></li>
                    </ul>
                </div>
                <form class="form-group" @submit.prevent="send">
                    <div class="row">
                        <div class="col-md-10">
                            <input type="text" class="form-control" placeholder="Type your message..." v-model.lazy="text" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary">
                                <span class="glyphicon glyphicon-envelope" style="margin-right: 5px;"></span> Send
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
